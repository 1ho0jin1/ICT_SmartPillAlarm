<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pillAlarmFragment"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/pillAlarmFragmentImage"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_image_24"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/pillAlarmFragmentName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/tv_error"
        android:gravity="center"
        android:textAlignment="gravity" />

    <Switch
        android:id="@+id/pillAlarmFragmentSwitch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_weight="1"
        android:text="@string/tv_error"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/colorDefaultBackground"
        app:layout_constraintCircleRadius="12dp" />

</LinearLayout>
