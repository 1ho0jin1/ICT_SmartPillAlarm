<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pillAlarmFragment"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/pillAlarmFragmentImage"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_image_24" />

    <TextView
        android:id="@+id/pillAlarmFragmentName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="NameofPill"
        android:textAlignment="center" />

    <Switch
        android:id="@+id/pillAlarmFragmentSwitch"
        android:layout_width="144dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:text="AM 09:00"
        android:textColor="@color/colorDefaultBackground"
        app:layout_constraintCircleRadius="12dp" />

</LinearLayout>
